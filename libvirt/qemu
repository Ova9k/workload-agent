#!/bin/bash

domainxml="-"

if [ $2 == "start" ] || [ $2 == "stopped" ]; then
	domainXmlContents=$( cat $domainxml )
	if [ $2 == "start" ]; then
			wlagent start "'$domainXmlContents'"
			if [ $? -ne 0 ]; then
					exit 1
			fi
	elif [ $2 == "stopped" ] ; then
			wlagent stop "'$domainXmlContents'"
			if [ $? -ne 0 ]; then
					exit 1
			fi
	fi
fi

exit 0
